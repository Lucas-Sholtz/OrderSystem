            <div class="form-group">
                <label class="control-label">Courier name</label>
                <select asp-for="CourierName" asp-items="@ViewBag.CouriersNames" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Execute" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<hr />
