@model Query

@{
    ViewData["Title"] = "Queries";
}

<h1>Queries</h1>
<hr />

<p style="font-size:20px">
    <b>Query1</b>
</p>
<p style="font-size:17px">
    Find shop name where selected couries works
</p>
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="Query1">
            <div class="form-group">
                <label class="control-label">Courier name</label>
                <select asp-for="CourierName" asp-items="@ViewBag.CouriersNames" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Execute" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<hr />
<p style="font-size:20px">
    <b>Query2</b>
</p>
<p style="font-size:17px">
    Calculate average price of products in shop where courier works
</p>
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
